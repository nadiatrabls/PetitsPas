<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.petitspas">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="PetitsPas"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetitsPas"
        tools:targetApi="31">

        <!-- Activité principale -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Nouvelle activité : Alphabet -->
        <activity
            android:name=".AlphabetActivity"
            android:exported="false" />
        <!-- Nouvelle activité : quizAlphabet -->
        <activity android:name=".QuizAlphabetActivity" android:exported="false" />
        <!-- Nouvelle activité : chiffres -->
        <activity android:name=".ChiffresActivity" android:exported="false" />

    </application>

</manifest>
